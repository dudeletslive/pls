								//- 	td= letterDetails.noOfPages
								//- tr
								//- 	th SIZE OF PAPER
								//- 	td= letterDetails.paperSize
								//- tr
								//- 	th POSTAGE OPTION
								//- 	td= letterDetails.postageOption
								//- tr
								//- 	th SPECIAL INSTRUCTION
								//- 	td= letterDetails.specialInstructions
							table.table.borderless
								tr
									th FILE #1
									td File Name Here
								tr
									th FILE #2
									td File Name Here
								tr
									th FILE #3
									td File Name Here
