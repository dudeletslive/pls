extends ../layouts/default

block content
	.jumbotron#printing: .container
		h1 Serving All Your Ministry <br> Communication Needs
		p.small Involve your supporters in your ministry in a powerful way.
	div.tab-container: .container
		ul.tabs
			li.tab.icon-prayer: a(href="#prayerLetters") Prayer Letters
			li.tab.icon-postcards: a(href="#postCards") Post Cards
			li.tab.icon-brochure.active: a(href="#brochures") Brochures
			li.tab.icon-fund: a(href="#fundAppeals") Fund Appeals
			li.tab.icon-christmas: a(href="#christmas") Christmas / Holiday
	div.tab-content
		div.tab-pane#prayerLetters
		div.tab-pane#postCards
		div.tab-pane.active#brochures
			.container
				.jumbotron
					.container
						.col-lg-6
							img(src="images/brochure.png" class="img-responsive")
						.col-lg-6
							h2 Brochures are a great way to present <br> an overview of the work you’re doing.
							p Brochures can be printed on any of our papers, including glossy paper.
							p Brochures printed in color on glossy paper and folder will cost about $46 for a two-sided brochure.
		div.tab-pane#fundAppeals
		div.tab-pane#christmas						
		.jumbotron.start-orden
			.container
				.row
					.col-lg-6
						p Get an accurate cost estimate by using our innovative order form. <br> Order today or just get a quote for later. It’s completely up to you!
					.col-lg-6
						.row
							.col-lg-6
								p
									span.from FROM 
									span $.46 / Brochure
							.col-lg-6
								a.btn.btn-lg.btn-primary.btn-pls-w.btn-green(href='#', role='button') START ORDER
